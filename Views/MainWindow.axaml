<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ModPane.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="ModPane.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="LogicPlayground"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource PrimaryBackgroundColor}">

    <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,*">
        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                Name="TitleBar"
                Background="{DynamicResource AccentColor}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,0,0,1"
                Height="30">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ModPane - v0.0.0"
                               Margin="10,0"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource TextColor}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" 
                            VerticalAlignment="Center">
                    <Button Name="MinimizeButton" Click="MinimizeClick" Content="â€”" Width="40" Height="40" 
                            Background="Transparent" BorderThickness="0" 
                            Foreground="{DynamicResource TextColor}"/>
                    <Button Name="MaximizeButton" Click="MaximizeClick" Content="ðŸ—–" Width="40" Height="40" 
                            Background="Transparent" BorderThickness="0"
                            Foreground="{DynamicResource TextColor}"/>
                    <Button Name="CloseButton" Click="CloseClick" Content="âœ•" Width="40" Height="40" 
                            Background="Transparent" BorderThickness="0"
                            Foreground="{DynamicResource TextColor}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Left Sidebar -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="{DynamicResource SecondaryBackgroundColor}"
                BorderBrush="{DynamicResource BorderColor}"
                BorderThickness="0,0,1,0"
                Width="60">
            <DockPanel>
                <!-- Logo Area -->
                <Border DockPanel.Dock="Top" Height="60" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,0,1">
                    <Image Name="SidebarLogo" Source="/Assets/LogoDarkIcon.ico" Width="60" Height="60" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <!-- Settings Button -->
                <Border DockPanel.Dock="Bottom" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,1,0,0">
                    <Button Content="Settings" Height="50" Background="Transparent" BorderThickness="0"
                            Foreground="{DynamicResource PrimaryForegroundColor}"/>
                </Border>

                <!-- Page Navigation -->
                <StackPanel Orientation="Vertical" Margin="0,10">
                    <Button Content="Home" Height="40" Background="Transparent" BorderThickness="0"
                            Foreground="{DynamicResource PrimaryForegroundColor}"/>
                    <Button Content="Logic" Height="40" Background="Transparent" BorderThickness="0"
                            Foreground="{DynamicResource PrimaryForegroundColor}"/>
                    <Button Content="Device" Height="40" Background="Transparent" BorderThickness="0"
                            Foreground="{DynamicResource PrimaryForegroundColor}"/>
                    <Button Content="Learn" Height="40" Background="Transparent" BorderThickness="0"
                            Foreground="{DynamicResource PrimaryForegroundColor}"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Grid.Column="1" RowDefinitions="Auto,*" ColumnDefinitions="*,Auto">
            <!-- Top Page Header Bar -->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                    Background="{DynamicResource SecondaryBackgroundColor}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="0,0,0,1"
                    Height="60">
                <ContentControl Content="{Binding CurrentPage.HeaderContent}" VerticalAlignment="Center" Margin="10,0"/>
            </Border>

            <!-- Main Content View -->
            <ContentControl Grid.Row="1" Grid.Column="0"
                            Content="{Binding CurrentPage.MainContent}"
                            Margin="5"/>

            <!-- Collapsible Right-Side Panel -->
            <Border Grid.Row="1" Grid.Column="1"
                    Background="{DynamicResource SecondaryBackgroundColor}"
                    BorderBrush="{DynamicResource BorderColor}"
                    BorderThickness="1,0,0,0"
                    Width="250"
                    IsVisible="{Binding CurrentPage.IsSidePanelVisible}">
                <ContentControl Content="{Binding CurrentPage.SidePanelContent}"/>
            </Border>
        </Grid>
    </Grid>
</Window>

