<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ModPane.App"
             xmlns:local="using:ModPane"
             xmlns:converters="using:ModPane.Converters"
             xmlns:behaviors="using:ModPane.Behaviors"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Resources>
        <converters:BrushToSvgCssConverter x:Key="BrushToSvgCss"/>
    </Application.Resources>


    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://ModPane/Styles/ColorPalette.axaml"/>
        <StyleInclude Source="avares://ModPane/Themes/UnifiedTheme.axaml"/>
    </Application.Styles>
</Application>